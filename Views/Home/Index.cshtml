                                    url: '@Url.Action("Upload","File")',
                                    method: "post",  //也可用put
                                    maxFiles: 1,//一次性上传的文件数量上限
                                    maxFilesize: @ViewBag.FileSizeMax, //MB
                                    acceptedFiles: "image/*", //上传的类型
                                    resizeMimeType: "image/jpeg",
