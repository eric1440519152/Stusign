                                            $('#dropzone').show();
                                            $('#dropzoneMessage').hide();
                                        }
                                    },

                                    error: function (file,errorMessage) {
                                        toastr.error(errorMessage, "上传失败", opts);
                                        $('#dropzone').show();
                                        $('#dropzoneMessage').hide();
                                    }
                                });

                                $("#advancedDropzone").css({
                                    minHeight: 200
                                });

